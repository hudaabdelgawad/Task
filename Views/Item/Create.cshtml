@model Task.ViewModels.ItemViewModel
@using Task.Resource
@{
    ViewBag.Title = "Create";
}


<h3 class="text-primary">
    @(@Model.Id == 0 ? @Resource.lbbtnSaveNewCategory : @Resource.lbbtnEditCategory )
</h3>

<hr />

@using (Html.BeginForm("Save", "Item"))
{
    @Html.AntiForgeryToken()

    @Html.HiddenFor(m => m.Id)

    <div class="form-group">
        @Html.LabelFor(m => m.Name)

        @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Name, null, new { @class = "text-danger" })
    </div>




    <button type="submit" class="btn btn-primary mt-3">@Resource.lbbtnSave</button>
}

@section Scripts
{
    @Scripts.Render("~/bundles/jqueryval")
}
