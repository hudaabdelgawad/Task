@using Task.Resource

<!DOCTYPE html>
<html  dir="@Task.Resource.Resource.dir">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/Site.css" rel="stylesheet" />

     <link href="https://cdn.jsdelivr.net/npm/sweetalert2@10.16.6/dist/sweetalert2.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet" />
     <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet" />
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
   <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

</head>

<body>
   
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark text-bg-secondary">
        <a class="navbar-brand" href="#">MyApp</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
                <!-- Icon for Home (visible on desktop) -->
                <li class="nav-item icon-home">
                    <a class="nav-link" href="@Url.Action("Index", "Home")">
                        <i class="fa fa-home"></i> @Resource.lbhome
                    </a>
                </li>

                <!-- Icon for Creating an Invoice (visible on mobile) -->
                <li class="nav-item icon-invoice">
                    <a class="nav-link" href="@Url.Action("Create", "Invoice")">
                        <i class="fa fa-file-invoice"></i>@Resource.lbcreateinvoice
                    </a>
                </li>

                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("Index", "Item")">@Resource.lbitem</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("Index", "Product")">@Resource.lbproduct</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("Index", "Client")">@Resource.lbclient</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("Index", "Invoice")">@Resource.lbinvoice</a>
                </li>


                <li>
                    <div>

                        <select id="languageSelect" name="languageSelect" class="form-control">
                            <option value="">@Resource.Selectlanguage</option>
                            <option value="@Url.Action("English", "Language")">@Resource.English</option>
                            <option value="@Url.Action("Arabic", "Language")">@Resource.Arabic</option>
                        </select>
                    </div>
                </li>

            </ul>
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year </p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@10.16.6/dist/sweetalert2.all.min.js"></script>
    <script src="~/Scripts/Js/JavaScript.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script type="text/javascript">
        document.getElementById('languageSelect').addEventListener('change', function () {
            var selectedValue = this.value;
            if (selectedValue) {
                window.location.href = selectedValue;
            }
        });
        $(document).ready(function () {
            var alertMessage = '@TempData["AlertMessage"]';
            if (alertMessage) {
                Swal.fire({
                    icon: 'success',
                    title: 'Success',
                    text: alertMessage,
                    timer: 3000,
                    showConfirmButton: false
                });
            }
        });
    </script>
</body>
</html>

